---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import features from "@data/features.json";

import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/casa1.jpeg";
import faqs from "@data/faqs.json";
import pricing from "@data/pricing.json";
 // ← ¡IMPORTANTE! Agrega esta línea
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import arquitectoImagen from "@images/arquitecto-imagen.jpeg";




const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Saber mas de Nosotros"
    url="/blog"
  />
  <HeroSection
 title="PISOS DE MADERA PREMIUM" 
 subTitle={`<span class="text-orange-600 dark:text-orange-400 font-semibold">
  100% Peruana, Duraderos y Sostenibles.
</span> Instalación rápida, acabados impecables y calidad al mejor precio para elevar la estética de tu hogar.`}
    primaryBtn="Explorar nuestras Maderas"
    primaryBtnURL="/products"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.8</span> / 5`}
    starCount={4}
    reviews={`Basado en más de <span class="font-bold">12.8k</span> opiniones`}
    src={heroImage}
    alt="Imagen de productos de madera para Cheaper Buy"
/>


<ClientsSection
title="Madera Peruana para Exportación"
subTitle="Exportamos madera desde Pucallpa a EE.UU., Canadá y México. Descubre nuestras rutas y productos."
showMap={true}
/>

<FeaturesGeneral
title="Satisfaciendo las Demandas de la Industria"
subTitle="En Cheaper Buy, abordamos los desafíos únicos en los sectores de ferretería y construcción. Desde herramientas innovadoras hasta servicios especializados, estamos comprometidos a ayudarte a superar obstáculos y alcanzar tus objetivos."


features={features}
/>
    
    
    
 

  <FeaturesNavs
  title=`Personaliza la experiencia de <span class="text-yellow-500 dark:text-yellow-400">Cheaper Buy</span> para satisfacer tus necesidades en madera y construcción.`
  tabs={[
    {
      heading: "Maderas de Alta Calidad",
      content:
        "Transforma tus espacios con nuestras maderas seleccionadas. Ofrecemos pisos, parquet y marcos de puertas con acabados resistentes y elegantes, perfectos para cualquier proyecto.",
      svg: "tools",
      src: tools,
      alt: "Pisos de madera en instalación",
      first: true,
    },
    {
      heading: "Gestión de Pedidos Eficiente",
      content:
        "Explora nuestra plataforma intuitiva para gestionar tus pedidos de madera de manera rápida y sencilla. Desde la cotización hasta la entrega, todo al alcance de un clic.",
      svg: "dashboard",
      src: dashboard,
      alt: "Captura de pantalla del panel de gestión de pedidos",
      second: true,
    },
    {
      heading: "Sostenibilidad y Resistencia",
      content:
        "Comprometidos con el medio ambiente, nuestras maderas provienen de fuentes sostenibles y están tratadas para ofrecer máxima durabilidad en cualquier entorno.",
      svg: "house",
      src: construction,
      alt: "Madera sostenible utilizada en proyectos de construcción",
    },
  ]}
/>

<TestimonialsSection
  title="La Mejor Calidad en Maderas"
  subTitle="En Cheaper Buy, nos aseguramos de ofrecer productos de alta calidad y con una experiencia de compra rápida y confiable."
  testimonials={[
    {
      content: "Cheaper Buy revolucionó nuestra forma de comprar madera. Recibimos productos de excelente calidad y con tiempos de entrega rápidos. ¡Definitivamente recomendado!",
      author: "Carlos Mendoza",
      role: "Arquitecto | Mendoza & Asociados",
      avatarSrc: arquitectoImagen, // Ya importado arriba
      width: 200, // Agregar ancho
      height: 200 // Agregar alto
    }
  ]}
  statistics={[
    {
      count: "70k+",
      description: "Clientes satisfechos en el sector de construcción y ferretería."
    },
    {
      count: "35%",
      description: "Aumento en la eficiencia de proyectos con nuestros productos."
    },
    {
      count: "15.3%",
      description: "Reducción de costos en materiales con nuestras ofertas exclusivas."
    },
    {
      count: "2x",
      description: "Mayor rapidez en la instalación de pisos y estructuras."
    }
  ]}
/>
<PricingSection pricing={pricing} />

<FAQ title="Preguntas frecuentes" faqs={faqs} />

<HeroSectionAlt
  title="Construyamos Juntos"
  subTitle="Cheaper Buy es tu aliado en la compra de madera de calidad, con una plataforma fácil de usar y soporte especializado."
  url="https://cheaperbuy.com"
/>
</MainLayout>
