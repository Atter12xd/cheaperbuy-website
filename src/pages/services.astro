---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
{
  "isRightSection": true,
  "title": "Specialized Consulting for Your Project",
  "subTitle": "Starting a construction or remodeling project can be challenging. At Cheaper Buy, we provide expert guidance at every stage, ensuring you make informed and accurate decisions. Our team will help you select the best wood for your project, considering quality, durability, and budget.",
  "single": false,
  "imgOne": blueprints,
  "imgOneAlt": "Construction blueprints and a tablet with structural designs.",
  "imgTwo": personWorking,
  "imgTwoAlt": "Person working on the planning of a construction project."
},
{
  "isRightSection": false,
  "title": "We Transform Designs into Reality",
  "subTitle": "At Cheaper Buy, we bring quality and precision to every project. From wood flooring installation to the fabrication of durable structures, we offer reliable solutions that turn your ideas into elegant and functional spaces. We work with top-quality materials and a team of experts who ensure impeccable finishes.",
  "img": beforeAfter,
  "imgAlt": "Space before and after wood installation.",
  "btnExists": false,
  "btnTitle": "Discover More",
  "btnURL": "#"
},
{
  "isRightSection": true,
  "title": "Professional Management for Successful Projects",
  "subTitle": "Efficient planning is key to any construction project. At Cheaper Buy, we offer comprehensive management to ensure your project progresses according to plan and within budget. We handle workflow coordination, resource allocation, and communication with stakeholders, allowing you to focus on your vision.",
  "single": false,
  "imgOne": constructionWorkers,
  "imgOneAlt": "Supervision of a construction project with wood.",
  "imgTwo": aerialView,
  "imgTwoAlt": "Aerial view of a successfully managed project."
},
{
  "isRightSection": false,
  "title": "Ensuring Durability and Performance",
  "subTitle": "Our commitment to your project doesn't end upon delivery. At Cheaper Buy, we offer maintenance services and ongoing support to ensure the durability and optimal performance of your wood construction. From periodic inspections to emergency assistance, our team is ready to provide reliable and efficient service.",
  "img": usingTools,
  "imgAlt": "Technician performing maintenance with specialized tools."
},
{
  "isRightSection": true,
  "title": "Tailored Strategies for Large-Scale Projects",
  "subTitle": "For our corporate clients, Cheaper Buy offers customized solutions designed to address specific challenges in the wood industry. We analyze your unique needs to develop strategies that optimize your operations, improve efficiency, and drive business growth.",
  "single": false,
  "imgOne": progressBuilding,
  "imgOneAlt": "Structure of a building under construction.",
  "imgTwo": underConstruction,
  "imgTwoAlt": "Building under construction with wooden materials.",
  "btnExists": false,
  "btnTitle": "Read More",
  "btnURL": "#"
},
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
  title="We Combine Our Experience with Your Vision"
  subTitle="At Cheaper Buy, we take pride in offering comprehensive solutions and exceptional service in the wood and carpentry industry. Our team of experts is committed to the success of your project, from planning to delivery, providing high-quality products and personalized attention."
  btnExists={true}
  btnTitle="Request a Consultation"
  btnURL="/contact"
/>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is reflected in every delivery. At Cheaper Buy, we guarantee high-standard wood products, ensuring durability and satisfaction in every project."
    mainStatTitle="98%"
    mainStatSubTitle="of our customers rate their experience with Cheaper Buy as excellent"
    stats={[
      {
        stat: "99.9%",
        description: "customers satisfied with the quality of our products",
      },
      {
        stat: "25,000+",
        description: "successful sales of flooring and wood products",
      },
      {
        stat: "90%",
        description: "customers return for future purchases",
      },
    ]}
/>
</MainLayout>
