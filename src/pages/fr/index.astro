---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import features from "@data/fr/features.json";

import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/casa1.jpeg";
import faqs from "@data/fr/faqs.json";

import pricing from "@data/fr/pricing.json";
 // ← ¡IMPORTANTE! Agrega esta línea
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import arquitectoImagen from "@images/arquitecto-imagen.jpeg";
import foRo1 from "@images/fo-ro1.jpeg";
import foRo2 from "@images/fo-ro2.jpeg";
import foRo3 from "@images/fo-ro3.jpeg";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Learn More About Us"
    url="/blog"
  />

  <HeroSection
  title="PREMIUM WOOD FLOORS"
subTitle={`<span class="text-orange-600 dark:text-orange-400 font-semibold">
  100% Peruvian, Durable, and Sustainable.
</span> Quick installation, flawless finishes, and top-quality at the best price to enhance your home's aesthetics.`}
primaryBtn="Explore Our Woods"
primaryBtnURL="/products"
secondaryBtn="Contact Us"
secondaryBtnURL="/contact"
withReview={true}
avatars={avatarSrcs}
rating={`<span class="font-bold">4.8</span> / 5`}
starCount={4}
reviews={`Based on more than <span class="font-bold">12.8k</span> reviews`}
src={[foRo1, foRo2, foRo3]} 
alt="Image of wood products for Cheaper Buy"
/>

<ClientsSection
title="Madera Peruana para Exportación"
subTitle="Exportamos madera desde Pucallpa a EE.UU., Canadá y México. Descubre nuestras rutas y productos."
showMap={true}
/>

<FeaturesGeneral
title="Meeting Industry Demands"
subTitle="At Cheaper Buy, we tackle the unique challenges in the hardware and construction sectors. From innovative tools to specialized services, we are committed to helping you overcome obstacles and achieve your goals."


features={features}
/>

<FeaturesNavs
title=`Customize the <span class=\"text-yellow-500 dark:text-yellow-400\">Cheaper Buy</span> experience to meet your wood and construction needs.`
tabs={[
  {
    heading: "High-Quality Woods",
    content:
      "Transform your spaces with our carefully selected woods. We offer flooring, parquet, and door frames with durable and elegant finishes, perfect for any project.",
    svg: "tools",
    src: tools,
    alt: "Pisos de madera en instalación",
    first: true,
  },
  {
    heading: "Efficient Order Management",
    content:
     "Explore our intuitive platform to manage your wood orders quickly and easily. From quotation to delivery, everything is just a click away.",
    svg: "dashboard",
    src: dashboard,
    alt: "Screenshot of the order management panel",
    second: true
  },
  {
    heading: "Sustainability and Durability",
    content:
      "Committed to the environment, our wood comes from sustainable sources and is treated to offer maximum durability in any setting.",
    svg: "house",
    src: construction,
    alt: "Sustainable wood used in construction projects",
  },
]}
/>

<TestimonialsSection
title="The Best Quality in Wood"
subTitle="At Cheaper Buy, we ensure high-quality products with a fast and reliable shopping experience."
testimonials={[
  {
    content:"Cheaper Buy revolutionized the way we buy wood. We received top-quality products with fast delivery times. Definitely recommended!",
    author: "Carlos Mendoza",
    role: "Architect | Mendoza & Associates",
    avatarSrc: arquitectoImagen, // Ya importado arriba
    width: 200, // Agregar ancho
    height: 200 // Agregar alto
  }
]}
statistics={[
  {
    count: "70k+",
    description: "Satisfied clients in the construction and hardware sectors."
  },
  {
    count: "35%",
    description: "Increased project efficiency with our products."
  },
  {
    count: "15.3%",
    description: "Reduced material costs with our exclusive deals."
  },
  {
    count: "2x",
    description: "Faster installation of flooring and structures."
  }
]}
/>

<PricingSection pricing={pricing} />

<FAQ title="Frequently Asked Questions" faqs={faqs} />

<HeroSectionAlt
  title="Let's Build Together"
  subTitle="Cheaper Buy is your trusted partner for purchasing quality wood, with an easy-to-use platform and expert support."
  url="https://cheaperbuy.com"
/>
</MainLayout>

