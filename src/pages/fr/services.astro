---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
{
  "isRightSection": true,
  "title": "Asesoría Especializada para tu Proyecto",
  "subTitle": "Iniciar un proyecto de construcción o remodelación puede ser un desafío. En Cheaper Buy, brindamos orientación experta en cada etapa, asegurando que tomes decisiones informadas y precisas. Nuestro equipo te ayudará a seleccionar la mejor madera para tu proyecto, considerando calidad, durabilidad y presupuesto.",
  "single": false,
  "imgOne": blueprints,
  "imgOneAlt": "Planos de construcción y una tablet con diseños estructurales.",
  "imgTwo": personWorking,
  "imgTwoAlt": "Persona trabajando en la planificación de un proyecto de construcción."
},
{
  "isRightSection": false,
  "title": "Transformamos Diseños en Realidad",
  "subTitle": "En Cheaper Buy, aportamos calidad y precisión a cada proyecto. Desde la instalación de pisos de madera hasta la fabricación de estructuras duraderas, ofrecemos soluciones confiables que convierten tus ideas en espacios elegantes y funcionales. Trabajamos con materiales de primera calidad y un equipo de expertos que garantizan acabados impecables.",
  "img": beforeAfter,
  "imgAlt": "Espacio antes y después de la instalación de madera.",
  "btnExists": false,
  "btnTitle": "Descubre Más",
  "btnURL": "#"
},
{
  "isRightSection": true,
  "title": "Gestión Profesional para Proyectos Exitosos",
  "subTitle": "Una planificación eficiente es clave para cualquier proyecto de construcción. En Cheaper Buy, ofrecemos una gestión integral para garantizar que tu proyecto avance según lo planeado y dentro del presupuesto. Nos encargamos de la coordinación del flujo de trabajo, la asignación de recursos y la comunicación con las partes interesadas, permitiéndote enfocarte en tu visión.",
  "single": false,
  "imgOne": constructionWorkers,
  "imgOneAlt": "Supervisión de un proyecto de construcción con madera.",
  "imgTwo": aerialView,
  "imgTwoAlt": "Vista aérea de un proyecto gestionado con éxito."
},
{
  "isRightSection": false,
  "title": "Garantizando Durabilidad y Rendimiento",
  "subTitle": "Nuestro compromiso con tu proyecto no termina con la entrega. En Cheaper Buy, ofrecemos servicios de mantenimiento y soporte continuo para asegurar la durabilidad y el óptimo desempeño de tu construcción en madera. Desde inspecciones periódicas hasta asistencia de emergencia, nuestro equipo está listo para brindarte un servicio confiable y eficiente.",
  "img": usingTools,
  "imgAlt": "Técnico realizando mantenimiento con herramientas especializadas."
},
{
  "isRightSection": true,
  "title": "Estrategias a Medida para Proyectos de Gran Escala",
  "subTitle": "Para nuestros clientes corporativos, Cheaper Buy ofrece soluciones personalizadas diseñadas para abordar desafíos específicos en la industria de la madera. Analizamos tus necesidades particulares para desarrollar estrategias que optimicen tus operaciones, mejoren la eficiencia y fomenten el crecimiento empresarial.",
  "single": false,
  "imgOne": progressBuilding,
  "imgOneAlt": "Estructura de un edificio en construcción.",
  "imgTwo": underConstruction,
  "imgTwoAlt": "Edificio en construcción con materiales de madera.",
  "btnExists": false,
  "btnTitle": "Leer Más",
  "btnURL": "#"
},
];
---

<MainLayout
  title="Services | ScrewFast"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/fr/services",
    url: "https://screwfast.uk/fr/services",
    name: "Services de Consultation d'Experts | ScrewFast",
    description:
      "Unissant l'expertise à votre vision, ScrewFast fournit un service exceptionnel et des solutions complètes dans le secteur du matériel et de la construction, de la consultation à l'achèvement du projet.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/fr",
      name: "ScrewFast",
      description:
        "ScrewFast propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "fr",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
  title="Combinamos Nuestra Experiencia con Tu Visión"
  subTitle="En Cheaper Buy, nos enorgullece ofrecer soluciones integrales y un servicio excepcional en la industria de la madera y la carpintería. Nuestro equipo de expertos está comprometido con el éxito de tu proyecto, desde la planificación hasta la entrega, brindando productos de alta calidad y atención personalizada."
  btnExists={true}
  btnTitle="Solicitar una Consulta"
  btnURL="/contact"
/>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Por los Números"
    subTitle="Nuestro compromiso con la calidad y confiabilidad se refleja en cada entrega. En Cheaper Buy, garantizamos productos de madera de alto estándar, asegurando durabilidad y satisfacción en cada proyecto."
    mainStatTitle="98%"
    mainStatSubTitle="de nuestros clientes califican su experiencia con Cheaper Buy como excelente"
    stats={[
      {
        stat: "99.9%",
        description: "clientes satisfechos con la calidad de nuestros productos",
      },
      {
        stat: "25,000+",
        description: "ventas exitosas de pisos y productos de madera",
      },
      {
        stat: "90%",
        description: "clientes regresan para futuras compras",
      },
    ]}
/>
</MainLayout>
