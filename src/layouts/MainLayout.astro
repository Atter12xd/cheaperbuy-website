---
import Meta from "@components/Meta.astro";
import Navbar from "@components/sections/navbar&footer/Navbar.astro";
import FooterSection from "@components/sections/navbar&footer/FooterSection.astro";
import { SITE } from "@data/constants";
import fondo from "@images/fondo-jo.jpeg"; 

const { title = SITE.title, meta, structuredData, lang = "en" } = Astro.props;

interface Props {
  title?: string;
  meta?: string;
  structuredData?: object;
  lang?: string;
}
---

<html lang={lang} class="lenis lenis-smooth scroll-pt-16">
  <head>
    <Meta meta={meta} structuredData={structuredData} />
    <title>{title}</title>
    <script is:inline>
      if (
        localStorage.getItem("hs_theme") === "dark" ||
        (!("hs_theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <script>
      import "@scripts/lenisSmoothScroll.js";
    </script>
    <style>
      /* Scrollbar personalizada */
      ::-webkit-scrollbar {
        width: 12px;
      }
      ::-webkit-scrollbar-track {
        background: #1a1a1a;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb {
        background: #ff6600;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #cc5500;
      }
      
      /* Scroll siempre visible en m√≥viles */
      @media (max-width: 768px) {
        body {
          overflow-y: scroll !important;
          -webkit-overflow-scrolling: touch;
        }
        ::-webkit-scrollbar {
          width: 16px;
        }
        ::-webkit-scrollbar-thumb {
          background: #ff6600;
          border-radius: 12px;
        }
      }
    </style>
  </head>

  <body class="relative text-white overflow-y-scroll">
    <Navbar />

    <!-- Contenido Principal con fondo aplicado -->
    <main 
      class="relative min-h-screen bg-cover bg-center bg-fixed backdrop-blur-xl"
      style="background-image: url('/images/fondo-jo.jpeg');"
    >
      <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8 bg-white/90 dark:bg-black/75 shadow-lg rounded-lg p-6">
        <slot />
      </div>
    </main>

    <FooterSection />
  </body>
</html>
