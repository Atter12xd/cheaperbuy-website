---
import FooterSocialLink from "@components/ui/links/FooterSocialLink.astro";
import EmailFooterInput from "@components/ui/forms/input/EmailFooterInput.astro";
import enStrings from "@utils/navigation.ts";
import frStrings from "@utils/fr/navigation.ts";
import Icon from "@components/ui/icons/Icon.astro";
import BrandLogo from "@components/BrandLogo.astro";
import { SITE } from "@data/constants";

// Seleccionar el idioma adecuado
const strings = Astro.currentLocale === "fr" ? frStrings : enStrings;

// Definir variables para los textos del footer
const sectionThreeTitle = "Mantente Informado";
const sectionThreeContent =
  "Suscríbete para recibir novedades sobre nuestros productos de madera, tendencias en construcción y ofertas exclusivas.";
---

<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-screen-2xl"
  >
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Logo and description -->
      <div class="flex flex-col space-y-3">
        <BrandLogo class="h-auto w-32" />
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          At Cheaper Buy, we offer high-quality wood for construction and decoration, focusing on sustainability and excellence.
        </p>
      </div>

      <!-- Useful links -->
      <div>
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200">Navigation</h3>
        <ul class="mt-3 space-y-3">
          <li>
            <a href="/blog" class="text-neutral-600 hover:text-neutral-500 dark:text-neutral-400 dark:hover:text-neutral-300">
              About Us
            </a>
          </li>
          <li>
            <a href="/products" class="text-neutral-600 hover:text-neutral-500 dark:text-neutral-400 dark:hover:text-neutral-300">
              Products
            </a>
          </li>
          <li>
            <a href="/services" class="text-neutral-600 hover:text-neutral-500 dark:text-neutral-400 dark:hover:text-neutral-300">
              Services
            </a>
          </li>
          <li>
            <a href="/contact" class="text-neutral-600 hover:text-neutral-500 dark:text-neutral-400 dark:hover:text-neutral-300">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Subscription form -->
      <div>
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200">{sectionThreeTitle}</h3>
        <form class="mt-3">
          <EmailFooterInput />
          <p class="mt-3 text-sm text-neutral-600 dark:text-neutral-400">
            {sectionThreeContent}
          </p>
        </form>
      </div>
    </div>

    <div
      class="mt-9 flex flex-col sm:flex-row items-center justify-between text-sm text-neutral-600 dark:text-neutral-400"
    >
      <p>
        © <span id="current-year"></span> Cheaper Buy. All rights reserved.
      </p>

      <!-- Social media -->
      <div class="flex space-x-4">
        <FooterSocialLink url={strings.socialLinks.facebook}>
          <Icon name="facebookFooter" />
        </FooterSocialLink>
      </div>
    </div>

    <script>
    const yearElement = document.getElementById("current-year");
if (yearElement) {
  yearElement.innerText = new Date().getFullYear().toString();
}
</script>
  </div>
</footer>